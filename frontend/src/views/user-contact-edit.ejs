<% layout('base') -%>
<div class="panel">
	<h2>Edit User Contact</h2>
	<% if(message.error) { %>
		<div class="alert alert-danger"><%= message.error %></div>
	<% } %>
	<div class="panel panel-default">
        <div class="form-panel">
			<form action="/user-contact-edit/<%= data._id %>" method="POST">
				<div class="form-group">
                    <select class="form-control" name="user">
                        <option value="" disabled="true">User</option>
						<% users.forEach(function(user) { %>
							<option value="<%=user.id%>" <%=(user.id == data.user.id) ? 'selected' : ''%>><%=user.name%></option>
						<% }) %>
					</select>
                </div>
				<div class="form-group">
					<input type="text" class="form-control" value="<%= data.address %>" name="address" required="true" autofocus><br>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" value="<%= data.city %>" name="city" required="true" autofocus><br>
				</div>
				<div class="form-group">
					<input type="text" class="form-control phone_with_ddd" value="<%= data.phone %>" name="phone" required="true" autofocus><br>
				</div>				
				<a href="/users-contacts" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back</a>
				<button type="submit" class="btn btn-primary"><i class="fa fa-hdd-o"></i> Save</button><br>
			</form>
		</div>
	</div>
</div>