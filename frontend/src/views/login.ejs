<% layout('base-login') -%>
<div class="logo-login"></div>
<div class="panel">
    <div class="box-login">
        <div class="tabs">
            <div class="tab">
                <span>Sign In</span>
            </div>
            <div class="tab">
                <span>Sign Up</span>
            </div>
        </div>
        
        <div id="contents" class="panel-body">
            <div class="content">
                <% if(message.success) { %>
                    <div class="alert alert-success"><%= message.success %></div>
                <% } else if(message.error) { %>
                    <div class="alert alert-danger"><%= message.error %></div>
                <% } %>
                <div class="form-panel">
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <i class="fa fa-user"></i>
                            <input type="text" class="form-control input-login" name="username" placeholder="Username"/>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-lock"></i>
                            <input type="password" class="form-control input-login" name="password" placeholder="Password"/>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-login btn-lg btn-block" value="Sign In"/>
                        </div>
                    </form>
                    <br><br>
                    <div class="text-center">
                        <div class="login-teste">Login de Teste:</div>
                        Usu√°rio: admin<br />
                        Senha: admin123<br />
                    </div>
                </div>
            </div>

            <div class="content">
                <div id="msg"></div>
                <div class="form-panel">
                    <form action="/register" method="POST">
                        <div class="form-group">
                            <i class="fa fa-user-circle"></i>
                            <input type="text" class="form-control input-login" placeholder="Name" name="name" required="true" autofocus>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-envelope"></i>
                            <input type="text" class="form-control input-login" placeholder="Email" name="email" required="true" autofocus>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-user"></i>
                            <input type="text" class="form-control input-login" placeholder="Username" name="username" required="true" autofocus>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-lock"></i>
                            <input type="password" class="form-control input-login" placeholder="Password" name="password" required="true" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-login btn-lg btn-block" value="Sign Up"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>