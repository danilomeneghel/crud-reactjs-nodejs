<% layout('base') -%>
<div class="panel">
    <h2>Users<h2>
    <a class="btn btn-primary" href="/user-add">Add</a><br><br>
    
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</td>
                <th>Email</td>
                <th>Username</td>
                <th>Role</td>
                <th>Status</td>
                <th>Created Date</td>
                <th class="text-center">Action</td>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(details) { %>
            <tr>
                <td><%= details.name %></td>
                <td><%= details.email %></td>
                <td><%= details.username %></td>
                <td><span class="capitalize"><%= details.role %></span></td>
                <td><span class="capitalize"><%= details.status %></span></td>
                <td><%= new Date(details.createdAt).toLocaleDateString("pt-br", {timeZone: "UTC"}) %></td>
                <td class="text-center">
                    <a class="btn btn-primary" href="/user-edit/<%= details._id %>">Edit</a>
                    <a class="btn btn-danger" href="/user-delete/<%= details._id %>">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
