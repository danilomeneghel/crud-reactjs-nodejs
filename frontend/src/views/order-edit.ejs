<% layout('base') -%>
<div class="panel">
	<h2>Edit Order</h2>
	<% if(message.error) { %>
		<div class="alert alert-danger"><%= message.error %></div>
	<% } %>
	<div class="panel panel-default">
        <div class="form-panel">
			<form action="/order-edit/<%= data._id %>" method="POST">
				<div class="form-group">
                    <select class="form-control" name="user">
                        <option value="" disabled="true">User</option>
						<% users.forEach(function(user) { %>
							<option value="<%=user.id%>" <%=(user.id == data.user.id) ? 'selected' : ''%>><%=user.name%></option>
						<% }) %>
					</select>
                </div>
                <div class="form-group">
                    <select class="form-control" name="product">
						<option value="" disabled="true">Product</option>
						<% products.forEach(function(product) { %>
							<option value="<%=product.id%>" <%=(product.id == data.product.id) ? 'selected' : ''%>><%=product.name%></option>
                        <% }) %>
					</select>
                </div>
				<div class="form-group">
					<input type="number" class="form-control" value="<%= data.quantity %>" name="quantity" required="true" autofocus>
				</div>
				<div class="form-group">
					<input type="datetime-local" class="form-control" value="<%= moment.utc(data.deliveryDate).format('YYYY-MM-DDTHH:mm:ss') %>" name="deliveryDate" required="true" autofocus>
				</div>
				<div class="form-group">
                    <textarea class="form-control" placeholder="Note" name="note" required="true" autofocus><%= data.note %></textarea>
                </div>
				<a href="/orders" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back</a>
				<button type="submit" class="btn btn-primary"><i class="fa fa-hdd-o"></i> Save</button><br>
			</form>
		</div>
	</div>
</div>