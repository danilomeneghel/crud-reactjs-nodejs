<% layout('base') -%>
<div class="panel">
	<h2>Edit Product</h2>
	<% if(message.error) { %>
		<div class="alert alert-danger"><%= message.error %></div>
	<% } %>
	<div class="panel panel-default">
        <div class="form-panel">
			<form action="/product-edit/<%= data._id %>" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" value="<%= data.name %>" name="name" required="true" autofocus>
				</div>
				<div class="form-group">
					<input type="text" class="form-control money" value="<%= data.price %>" name="price" required="true" autofocus>
				</div>
				<div class="form-group">
                    <textarea type="text" class="form-control" name="description" required="true" autofocus><%= data.description %></textarea>
                </div>
				<a href="/products" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back</a>
				<button type="submit" class="btn btn-primary"><i class="fa fa-hdd-o"></i> Save</button><br>
			</form>
		</div>
	</div>
</div>